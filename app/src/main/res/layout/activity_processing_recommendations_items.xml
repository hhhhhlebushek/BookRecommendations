<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".UpdatePersonalData"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik_bold"
        android:gravity="center"
        android:text="Содержание\nкнижной рекомендации"
        android:textColor="@color/black"
        android:textSize="22dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        tools:ignore="MissingConstraints"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_item_in_profile"
        android:orientation="vertical"
        android:scrollbars="none"
        app:elevation="6dp"
        android:layout_gravity="center"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            tools:ignore="MissingConstraints">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_bold"
                android:text="Название книги"
                android:textColor="@color/lilac"
                android:textSize="16dp"
                tools:ignore="MissingConstraints"
                ></TextView>
            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik"
                android:textColor="@color/orange"
                android:textSize="16dp"
                tools:ignore="MissingConstraints"
                ></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            tools:ignore="MissingConstraints">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_bold"
                android:text="Автор книги"
                android:textColor="@color/lilac"
                android:textSize="16dp"
                tools:ignore="MissingConstraints"
                ></TextView>
            <TextView
                android:layout_marginLeft="50dp"
                android:id="@+id/author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik"

                android:textColor="@color/orange"
                android:textSize="16dp"
                tools:ignore="MissingConstraints"
                ></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            tools:ignore="MissingConstraints">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_bold"
                android:text="Год написания"
                android:textColor="@color/lilac"
                android:textSize="16dp"
                tools:ignore="MissingConstraints"
                ></TextView>
            <TextView
                android:layout_marginLeft="30dp"
                android:id="@+id/year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik"
                android:textColor="@color/orange"
                android:textSize="16dp"
                tools:ignore="MissingConstraints"
                ></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            tools:ignore="MissingConstraints">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_bold"
                android:text="Описание книги"
                android:textColor="@color/lilac"
                android:textSize="16dp"
                tools:ignore="MissingConstraints"
                ></TextView>
            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/keys"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik"
                android:scrollbars = "vertical"
                android:textColor="@color/orange"
                android:textSize="16dp"
                tools:ignore="MissingConstraints"
                ></TextView>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/btn_reg"
        android:orientation="vertical"
        android:text="Сохранить рекомендацию"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="14dp"
        />
    <Button
        android:id="@+id/delete"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/btn_reg"
        android:orientation="vertical"
        android:text="Удалить рекомендацию"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="14dp"
        />
    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik_bold"
        android:text="Примечание:"
        android:textColor="@color/orange"
        android:layout_gravity="center"
        android:textSize="14dp"
        tools:ignore="MissingConstraints"
        ></TextView>
    <TextView
        android:id="@+id/nameWindow"
        android:text="При сохранение рекомендации она переносится в основную книжную базу и удаляется из временного хранилища!\n\nПри удаление рекомендации она очищается из временного хранилища без возможности восстановления!"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik"
        android:gravity="center"
        android:textColor="@color/gray"
        android:textSize="12dp"
        />
</LinearLayout>