<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik_bold"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="Регистрация"
        android:textSize="22dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lastname"

            android:hint="@string/lastname"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/rubik"
            android:text=""
            android:textColor="@color/black"
            android:textColorHint="@color/lilac"
            android:textSize="18dp"
            app:met_baseColor="@color/orange"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/lilac"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/firstname"
            android:hint="@string/firstname"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/rubik"
            android:text=""
            android:textColor="@color/black"
            android:textColorHint="@color/lilac"
            android:textSize="18dp"
            app:met_baseColor="@color/orange"

            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/lilac"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/phone"
            android:hint="@string/phone"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/rubik"
            android:text=""
            android:textColor="@color/black"
            android:textColorHint="@color/lilac"
            android:textSize="18dp"
            app:met_baseColor="@color/orange"
            android:inputType="phone"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/lilac"
            app:met_maxCharacters="11"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:hint="@string/email"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/rubik"
            android:text=""
            android:textColor="@color/black"
            android:textColorHint="@color/lilac"
            android:textSize="18dp"
            app:met_baseColor="@color/orange"
            android:inputType="textEmailAddress"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/lilac"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/login"
            android:hint="@string/login"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/rubik"
            android:text=""
            android:textColor="@color/black"
            android:textColorHint="@color/lilac"
            android:textSize="18dp"
            app:met_baseColor="@color/orange"

            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/lilac"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/password"
            android:hint="@string/password"
            android:fontFamily="@font/rubik"
            android:text=""
            android:textColor="@color/black"
            android:textColorHint="@color/lilac"
            android:textSize="18dp"
            app:met_baseColor="@color/orange"
            android:inputType="textPassword"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/lilac"
            app:met_maxCharacters="8"
            />

        <Button
            android:id="@+id/buttonSignUp"
            android:layout_width="match_parent"

            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_reg"
            android:fontFamily="@font/rubik_bold"
            android:shadowRadius="@integer/google_play_services_version"
            android:text="@string/button_reg"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="14dp"
            tools:ignore="UsingOnClickInXml" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik"
            android:text="* - обязательные поля"
            android:layout_gravity="center"
            android:textColor="@color/gray"
            android:textSize="12dp"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="30dp"
            ></TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik"
            android:text="Уже есть аккаунт?"
            android:textColor="@color/gray"
            android:textSize="12dp"
            tools:ignore="MissingConstraints"
            android:layout_marginLeft="10dp"></TextView>
        <TextView
            android:clickable="true"
            android:onClick="onClickAuto"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:textColor="@color/lilac"
            android:textSize="12dp"
            android:fontFamily="@font/rubik_bold"
            android:text="Авторизация"
            tools:ignore="MissingConstraints"
            ></TextView>
    </LinearLayout>


</LinearLayout>