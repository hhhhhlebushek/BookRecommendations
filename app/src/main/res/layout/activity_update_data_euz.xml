<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".UpdatePersonalData"
    >
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik_bold"
        android:gravity="center"
        android:text="Обновление данных входа"
        android:textColor="@color/black"
        android:textSize="22dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        tools:ignore="MissingConstraints"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        >

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/newLogin"
            android:hint="Введите новый логин"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/rubik"
            android:text=""
            android:textColor="@color/black"
            android:textColorHint="@color/lilac"
            android:textSize="18dp"
            app:met_baseColor="@color/orange"

            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/lilac"
            />

        <Button
            android:id="@+id/buttonNewLogin"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_reg"
            android:fontFamily="@font/rubik_bold"
            android:shadowRadius="@integer/google_play_services_version"
            android:text="Обновить логин"
            android:textSize="14dp"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/newPass"
            android:layout_marginTop="20dp"
            android:hint="Введите новый пароль"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/rubik"
            android:text=""
            android:textColor="@color/black"
            android:textColorHint="@color/lilac"
            android:textSize="18dp"
            app:met_baseColor="@color/orange"

            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/lilac"
            />

        <Button
            android:id="@+id/buttonNewPass"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_reg"
            android:fontFamily="@font/rubik_bold"
            android:shadowRadius="@integer/google_play_services_version"
            android:text="Обновить пароль"
            android:textSize="14dp"
            />

    </LinearLayout>
</LinearLayout>