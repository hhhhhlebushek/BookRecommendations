<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".UpdatePersonalData"
    >
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik_bold"
        android:gravity="center"
        android:text="Обновление личных данных"
        android:textColor="@color/black"
        android:textSize="22dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        tools:ignore="MissingConstraints"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        >

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/newFam"
            android:hint="Введите новую фамилию"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/rubik"
            android:text=""
            android:textColor="@color/black"
            android:textColorHint="@color/lilac"
            android:textSize="18dp"
            app:met_baseColor="@color/orange"

            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/lilac"
            />

        <Button
            android:id="@+id/buttonNewFam"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_reg"
            android:fontFamily="@font/rubik_bold"
            android:shadowRadius="@integer/google_play_services_version"
            android:text="Обновить фамилию"
            android:textSize="14dp"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/newName"
            android:hint="Введите новое имя"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/rubik"
            android:text=""
            android:layout_marginBottom="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/lilac"
            android:textSize="18dp"
            app:met_baseColor="@color/orange"

            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/lilac"
            />

        <Button
            android:id="@+id/buttonNewName"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_reg"
            android:fontFamily="@font/rubik_bold"
            android:shadowRadius="@integer/google_play_services_version"
            android:text="Обновить имя"
            android:textSize="14dp"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/newEmail"
            android:inputType="textEmailAddress"
            android:layout_marginTop="20dp"
            android:hint="Введите новый email"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/rubik"
            android:text=""
            android:textColor="@color/black"
            android:textColorHint="@color/lilac"
            android:textSize="18dp"
            app:met_baseColor="@color/orange"

            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/lilac"
            />

        <Button
            android:id="@+id/buttonNewEmail"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_reg"
            android:fontFamily="@font/rubik_bold"
            android:shadowRadius="@integer/google_play_services_version"
            android:text="Обновить email"
            android:textSize="14dp"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/newPhone"
            android:inputType="phone"
            android:layout_marginTop="20dp"
            android:hint="Введите новый номер телефона"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/rubik"
            android:text=""
            android:textColor="@color/black"
            android:textColorHint="@color/lilac"
            android:textSize="18dp"
            app:met_baseColor="@color/orange"

            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/lilac"
            />

        <Button
            android:id="@+id/buttonNewPhone"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_reg"
            android:fontFamily="@font/rubik_bold"
            android:shadowRadius="@integer/google_play_services_version"
            android:text="Обновить номер телефона"
            android:textSize="14dp"
            />
    </LinearLayout>
</LinearLayout>