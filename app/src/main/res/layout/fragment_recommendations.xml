<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/fragment_profile"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".RecommendationsFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik_bold"
        android:gravity="center"
        android:text="Мои рекомендации"
        android:textColor="@color/black"
        android:textSize="22dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        tools:ignore="MissingConstraints"
        />
    <TextView
        android:id="@+id/nameWindow"
        android:text="Уважаемый читатель, будьте внимательны\nпри написании характеристик произведения"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik"
        android:gravity="center"
        android:textColor="@color/gray"

        android:textSize="12dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik_bold"
            android:text="Название книги"
            android:textColor="@color/lilac"
            android:textSize="16dp"
            tools:ignore="MissingConstraints"
            ></TextView>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:layout_marginLeft="20dp"
            android:hint="Введите название книги"
            android:fontFamily="@font/rubik"
            android:text=""
            android:textColor="@color/black"
            android:textColorHint="@color/lilac"
            android:textSize="16dp"
            app:met_baseColor="@color/orange"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/lilac"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik_bold"
            android:text="Автор книги"
            android:textColor="@color/lilac"
            android:textSize="16dp"
            tools:ignore="MissingConstraints"
            ></TextView>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/author"
            android:layout_marginLeft="50dp"
            android:hint="Введите автора книги"
            android:fontFamily="@font/rubik"
            android:text=""
            android:textColor="@color/black"
            android:textColorHint="@color/lilac"
            android:textSize="16dp"
            app:met_baseColor="@color/orange"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/lilac"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik_bold"
            android:text="Год написания"
            android:textColor="@color/lilac"
            android:textSize="16dp"
            tools:ignore="MissingConstraints"
            ></TextView>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/year"
            android:layout_marginLeft="30dp"
            android:hint="Введите год написания"
            android:fontFamily="@font/rubik"
            android:text=""
            android:textColor="@color/black"
            android:textColorHint="@color/lilac"
            android:textSize="16dp"
            app:met_baseColor="@color/orange"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/lilac"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik_bold"
            android:text="Жанр книги"
            android:textColor="@color/lilac"
            android:textSize="16dp"
            tools:ignore="MissingConstraints"
            ></TextView>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/genre"
            android:layout_marginLeft="52dp"
            android:hint="Введите жанр книги"
            android:fontFamily="@font/rubik"
            android:text=""
            android:textColor="@color/black"
            android:textColorHint="@color/lilac"
            android:textSize="16dp"
            app:met_baseColor="@color/orange"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/lilac"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/textt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik_bold"
        android:gravity="center"
        android:text="Выберите характеристики произведения"
        android:textColor="@color/orange"
        android:textSize="14dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        tools:ignore="MissingConstraints"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        android:background="@color/white"
        android:orientation="vertical"
        android:scrollbars="none"
        app:elevation="6dp"
        android:layout_gravity="center"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <RelativeLayout
                android:id="@+id/r"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="0dp">
                <ListView
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="2000dp"
                    android:layout_marginTop="10dp"
                    android:divider="@null"
                    android:background="@color/lilac"
                    android:dividerHeight="15dp"
                    android:choiceMode="multipleChoice"
                    android:drawSelectorOnTop="true"
                    android:scrollbars="none">
                </ListView>
            </RelativeLayout>
        </ScrollView>

    </LinearLayout>
    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/btn_reg"
        android:orientation="vertical"
        android:text="Отправить рекомендацию"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="14dp"
        />
</LinearLayout>